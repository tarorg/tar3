---
import Layout from '../layouts/Layout.astro';

const links = [
    { title: "Portfolio", url: "https://yourportfolio.com", icon: "💼" },
    { title: "GitHub", url: "https://github.com/yourusername", icon: "💻" },
    { title: "LinkedIn", url: "https://linkedin.com/in/yourprofile", icon: "🔗" },
    { title: "Twitter", url: "https://twitter.com/yourhandle", icon: "🐦" },
    { title: "Instagram", url: "https://instagram.com/yourprofile", icon: "📸" },
    { title: "Blog", url: "https://yourblog.com", icon: "✍️" },
];
---

<Layout title="Tars - Link in Bio">
    <div class="flex flex-col items-center justify-center min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 p-4">
        <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8">
            <div class="flex flex-col items-center mb-8">
                <img src="/iyothee.jpg" alt="Profile" class="w-24 h-24 rounded-full mb-4 object-cover ring-2 ring-gray-200">
                <h1 class="text-2xl font-bold text-gray-800">Your Name</h1>
                <p class="text-gray-600 text-sm mt-2 text-center">Your concise tagline or brief bio</p>
            </div>
            
            <div class="space-y-3">
                {links.map(link => (
                    <a 
                        href={link.url} 
                        target="_blank" 
                        rel="noopener noreferrer" 
                        class="flex items-center w-full p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition duration-300 group"
                    >
                        <span class="text-xl mr-3 group-hover:scale-110 transition-transform">{link.icon}</span>
                        <span class="font-medium text-gray-700 group-hover:text-gray-900">{link.title}</span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-auto text-gray-400 group-hover:text-gray-600" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                    </a>
                ))}
            </div>
        </div>
    </div>
</Layout>